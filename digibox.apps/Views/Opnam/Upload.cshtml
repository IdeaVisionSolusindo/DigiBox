@model digibox.services.Models.MaterialModel
@{
    ViewBag.Title = "Upload Material";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
                <div class="card-tools">
                        @using (Html.BeginForm("Upload", "Opnam", FormMethod.Post, new { @id = "frmUpload", @class = "input-group input-group-md", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken();
                            <input type="file" id="file" name="file" />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary btn-sm">Upload</button>
                                <a class="btn btn-success btn-sm" href="~/Distributor/DownloadTemplate">
                                    <i class="fa fa-download"></i> Template
                                </a>
                            </div>
                        }
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body" id="tblData">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-4">
                        <label class="form-control"></label>
                    </div>
                    <label class="col-sm-2 col-form-label">Operator</label>
                    <div class="col-sm-4">
                        <label class="form-control"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Type</label>
                    <div class="col-sm-10">
                        <label class="form-control"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Part. No
                                </th>
                                <th>
                                    Material
                                </th>
                                <th>
                                    In/Out
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Description
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        <div class="card-footer">
            <button type="button" onclick="save()" class="btn btn-outline-success"> 
                <i class="fa fa-save"></i> Save
            </button>
        </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/Opnam/Upload.js"></script>

}
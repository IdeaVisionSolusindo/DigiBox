@{

    var material = ViewData["material"] as digibox.services.Models.MaterialModel;
    var distributor = ViewData["distributor"] as string;

    ViewBag.Title = "Detail Price " + material.name;
    var materialid = ViewData["materialid"];

}


<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
            </div>
            <div class="card-body">
                <div class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Part No</label>
                        <div class="col-sm-4">
                            <label class="form-control">@material.partno</label>
                        </div>
                        <label class="col-sm-2 col-form-label">Material</label>
                        <div class="col-sm-4">
                            <label class="form-control">@material.name</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Distibutor</label>
                        <div class="col-sm-10">
                            <label class="form-control">@distributor</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <button class="btn btn-danger" onclick="add()"> New Price</button>
                        </div>
                    </div>
                    <input type="hidden" value="@materialid" id="materialid" />
                </div>
                <!--Price History Table-->
                <div id="tblData">
                    @Html.Action("ApprovalMaterialPrice", new { id = materialid })
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/Pricing/ApprovalPrice.js"></script>
}
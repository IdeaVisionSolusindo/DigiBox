@model digibox.services.Models.UserModel
@{
    var optRole = ViewData["roles"] as List<SelectListItem>;
    var ftzList = ViewData["ftzList"] as List<SelectListItem>;
    var ppjkList = ViewData["ppjkList"] as List<SelectListItem>;
    ViewBag.Title = "New User";
}

<div id="dgModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: block; padding-right: 17px;" aria-modal="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>

            @using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal", id = "frmAdd" }))
            {
                @Html.AntiForgeryToken()
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group row">
                        @Html.HiddenFor(x => x.id)
                        @Html.LabelFor(x => x.name, new { @class = "col-3 col-form-label" })
                        <div class="col-9">
                            @Html.TextBoxFor(x => x.name, new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.name), required = "required" })
                            @Html.ValidationMessageFor(x => x.name, null, new { @class = "text-danger small" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.email, new { @class = "col-3 col-form-label" })
                        <div class="col-9">
                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.email), required = "required" })
                            @Html.ValidationMessageFor(x => x.email, null, new { @class = "text-danger small" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.position, new { @class = "col-3 col-form-label" })
                        <div class="col-3">
                            @Html.TextBoxFor(x => x.position, new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.position), required = "required" })
                            @Html.ValidationMessageFor(x => x.position, null, new { @class = "text-danger small" })
                        </div>
                        @Html.LabelFor(x => x.roleid, new { @class = "col-3 col-form-label" })
                        <div class="col-3">
                            @Html.DropDownListFor(x => x.roleid, optRole, "Select " + Html.DisplayNameFor(x => x.roleid).ToString(), new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.roleid), required = "required" })
                            @Html.ValidationMessageFor(x => x.roleid, null, new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            }

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>






        function changePassword() {
            let base = $('#_base').val();
            let link = base + "/User/ChangePassword";
            $("#dgModal").remove();
            $.get(link, function (dta) {
                $("body").append(dta);
                $("#dgChangePassword").modal('show');
                let frm = $('#frmChangePassword');
                $.validator.unobtrusive.parse(frm);
                frm.bind('submit', function (ev) {
                    $.ajax({
                        type: frm.attr('method'),
                        url: frm.attr('action'),
                        data: frm.serialize(),
                        success: function (res) {
                            if (res.isSuccess === true) {
                                $('.modal-backdrop').hide(); // for black background
                                $('body').removeClass('modal-open'); // F/or scroll run
                                $('#dgChangePassword').modal('hide');
                                $("#dgChangePassword").remove();

                                toastr.success('Data is Saved')

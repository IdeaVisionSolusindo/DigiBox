@model   digibox.services.Models.MaterialModel
@{
    ViewBag.Title = "Material Transactions";
    var parameters = ViewData["parameters"] as List<SelectListItem>;
    var distributor = ViewData["distributor"] as string;

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
                <div class="card-tools" style="width:50%">
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="form-group row">
                            @Html.HiddenFor(x=>x.id)
                            @Html.LabelFor(x => x.partno, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-4">
                                <label class="form-control">@Model.partno</label>
                            </div>
                            @Html.LabelFor(x => x.name, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-4">
                                <label class="form-control">@Model.name</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Distributor</label>
                            <div class="col-sm-10">
                                <label class="form-control">@distributor</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tblData" class="table-responsive p-3 border-info ">
                    @Html.Action("DetailHistory", new { id= Model.id})
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/Inventory/History.js"></script>
}
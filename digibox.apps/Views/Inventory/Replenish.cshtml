@model digibox.services.Models.ReplenishModel
@{
    ViewBag.Title = "Replenish";
    var collectorname = ViewData["collectorname"] as string;

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
                <div class="card-tools">
                    <div class="input-group input-group-md">
                        <div class="input-group-append text-right">
                            <button class="btn btn-danger btn-sm" onclick="add()">
                                <i class="fas fa-plus"></i> Add Item
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <!--HEADER-->
            @using (Html.BeginForm("Add", "Inventory", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="card-body p-lg-5">
                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        @Html.LabelFor(x => x.no, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.no, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.no) })
                        </div>
                        @Html.LabelFor(x => x.indate, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-4">

                            <div class="input-group date" id="indate" data-target-input="nearest">
                                @Html.TextBoxFor(x => x.indate, new { @class = "form-control datetimepicker-input", data_target = "#datestart" })
                                <div class="input-group-append" data-target="#datestart" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.collectorid, new { @class = "col-sm-2 col-form-label" })
                        @Html.HiddenFor(x => x.collectorid)
                        <div class="col-sm-10">
                            <label class="form-control">@collectorname</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.receivedbyid, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            Penerima Barang
                        </div>
                    </div>

                    <div id="tblData" class="table-responsive p-3 border-info ">
                        <table id="material" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Part No.
                                    </th>
                                    <th>
                                        Material
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </div>
            }

            <!-- /.card-body -->
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/inventory/Replenish.js"></script>
}
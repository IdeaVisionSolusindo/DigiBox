
@model digibox.services.Models.AttributeModel

<div class="modal fade" id="dgModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Model.attributename</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Add", "Attribute", FormMethod.Post, new { @id = "frmAdd", @class= "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>x.attributename)
                <div class="modal-body form-horizontal">
                    <div class="form-group row">
                        @Html.LabelFor(x => x.attributevalue, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.attributevalue, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.description, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(x => x.description, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
